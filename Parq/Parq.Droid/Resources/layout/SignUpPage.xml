<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up_page"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashBackgroundBlur"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <ImageView
        android:id="@+id/parqlogo3"
        android:layout_width="wrap_content"
        android:layout_height="166.0dp"
        android:src="@drawable/Parq_Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/parqlogo3"
        android:id="@+id/reg_nameInput">
        <EditText
            android:id="@+id/reg_Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account"
            android:gravity="center"
            android:inputType="text"
            android:textSize="14dp"
            android:textColor="@color/accent"
            android:textColorHint="@color/white"
            android:hint="@string/name" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/parqlogo3"
        android:id="@+id/reg_surnameInput">
        <EditText
            android:id="@+id/reg_Surname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account"
            android:textSize="14dp"
            android:textColor="@color/accent"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:inputType="text"
            android:hint="@string/surname" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/parqlogo3"
        android:id="@+id/reg_emailInput">
        <EditText
            android:id="@+id/reg_Email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_outline"
            android:textSize="14dp"
            android:textColor="@color/accent"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:hint="@string/email" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/parqlogo3"
        android:id="@+id/reg_passwordInput">
        <EditText
            android:id="@+id/reg_Password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_key_variant"
            android:textSize="14dp"
            android:textColor="@color/accent"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="@string/password" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">
        <Button
            style="@style/ButtonPrimary"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Join_Now"
            android:textAllCaps="false"
            android:id="@+id/join_now_button"
            android:textColor="@color/primaryLight"
            android:translationZ="@dimen/fab_margin"
            android:layout_marginRight="5dp" />
        <Button
            style="@style/ButtonFacebook"
            android:id="@+id/signup_facebook_login_button"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_facebook"
            android:drawablePadding="-15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/primaryLight"
            android:translationZ="@dimen/fab_margin" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/alreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Already_Have_Account"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:clickable="true" />
    </LinearLayout>
</RelativeLayout>