<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<color name="custom_theme_color">#ffffffff</color>
	<color name="text_theme_color">#ff35495d</color>

	<style name="CustomTheme" parent="android:Theme.Holo.Light">
	    <item name="android:windowBackground">@color/custom_theme_color</item>
	    <item name="android:colorBackground">@color/custom_theme_color</item>
	    <item name="android:textColor">@color/text_theme_color</item>
	    <item name="android:windowAnimationStyle">@null</item>
	</style>

  	<style name="Theme.AltBeacon"
    	parent="android:Theme.Holo.Light.DarkActionBar">
<!--    	<item name="android:windowNoTitle">true</item>-->
    	<item name="android:windowIsTranslucent">false</item>
    	<item name="android:windowIsFloating">false</item>
    	<item name="android:backgroundDimEnabled">true</item>

    	<item name="android:actionBarStyle">@style/CustomActionBar</item>

    	<item name="android:windowBackground">@color/custom_theme_color</item>
	    <item name="android:colorBackground">@color/custom_theme_color</item>
	    <item name="android:textColor">@color/text_theme_color</item>
	    <item name="android:windowAnimationStyle">@null</item>

  	</style>

  	<style name="CustomActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#ff35495d</item>
    </style>
</resources>